<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.MenuFragment">

    <TextView
        android:id="@+id/menuPghd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Menu"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/menulogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/logo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menuPghd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menulogo"
        app:layout_constraintVertical_bias="0.142">

        <Button
            android:id="@+id/myprofilebtn"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="My Profile"
            android:drawableRight="@drawable/sp_1_nxt"
            android:textColor="@color/green"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/favplacesebtn"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="Bookmarks"
            android:drawableRight="@drawable/sp_1_nxt"
            android:layout_marginTop="20dp"
            android:textColor="@color/green"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/language"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="Language"
            android:drawableRight="@drawable/sp_1_nxt"
            android:layout_marginTop="20dp"
            android:textColor="@color/green"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/privacyandtermsbtn"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="Privacy and Terms"
            android:drawableRight="@drawable/sp_1_nxt"
            android:layout_marginTop="20dp"
            android:textColor="@color/green"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/helpcenterbtn"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="Help Center"
            android:drawableRight="@drawable/sp_1_nxt"
            android:layout_marginTop="20dp"
            android:textColor="@color/green"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/sharebtn"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="Share"
            android:drawableRight="@drawable/sp_1_nxt"
            android:layout_marginTop="20dp"
            android:textColor="@color/green"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/logoutbtn"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="Log Out"
            android:layout_marginTop="20dp"
            android:textColor="@color/green"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>